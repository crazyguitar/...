[core]
	editor = /usr/bin/vim

[diff]
    tool = vimdiff
[difftool]
    prompt = false
[alias]
    br = branch
    st = status
    co = checkout
    df = diff
    la = log --graph --decorate --pretty=oneline --abbrev-commit --all
    dt = difftool
[color]
    ui = auto
    diff = auto
    status = auto
    branch = auto
    log = auto
